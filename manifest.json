{
  "manifest_version": 3,
  "name": "Print Claude to PDF Formatting",
  "version": "1.1",
  "description": "Adds print CSS to a Claude chat by appending an @media print{} section to the DOM object for PDF print formatting.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Print Claude to PDF Formatting"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/chat/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
